---
import Layout from "../layouts/Layout.astro";

import Form from "../components/Form.astro";
import "../styles/global.css";
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
import { ChevronRight, BarChart2, Users, Bell } from "lucide-react";
---

<Layout title="Askform">
  <main class="bg-white h-full overflow-x-hidden">
    <div class="min-h-screen bg-[#F4F4F4] flex flex-col gap-3">
      {/* Header */}
      <header class="border-b">
        <nav
          class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between"
        >
          <span class="text-xl font-semibold flex gap-0">
            <span class="font-bold">ask</span>
            <span class="">form</span>
          </span>
          <div class="flex items-center gap-4">
            <a href="#" class="text-sm text-gray-800 font-bold">Accueil</a>
            <a href="#" class="text-sm text-gray-600">Fonctionnalité</a>
            <a href="#" class="text-sm text-gray-600">Tarif</a>
            <a href="#" class="text-sm text-gray-600">Démos</a>
          </div>
          <div>
            <Button variant="ghost" className="ml-4">Se connecter</Button>
            <Button>Démarrer</Button>
          </div>
        </nav>
      </header>

      {/* Hero Section */}
      <section
        class="max-w-6xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-20 bg-white rounded-lg border"
      >
        <div class="max-w-3xl">
          <span
            class="text-sm text-gray-500 border rounded-xl bg-[#F5F5F5] px-4 py-1"
            >Askform version 1.0</span
          >
          <h1 class="mt-4 text-4xl sm:text-5xl font-bold leading-tight">
            Une infinité de possibilité de générer et gérer ses besoins
          </h1>
          <p class="mt-4 text-gray-600">
            Créez des formulaires adaptés à vos besoins pour collecter les
            informations essentielles rapidement
          </p>
          <div class="mt-8 flex gap-4">
            <Button className="gap-2"> S'inscrire avec Google </Button>
            <Button variant="outline"> S'inscrire avec un e-mail </Button>
          </div>
        </div>
      </section>

      {/* Use Cases Section */}
      <section class="py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h2 class="text-3xl">
              Différents <span class="font-bold">Cas d'usage</span>
            </h2>
            <p class="mt-4 text-gray-600">
              Créez des formulaires entièrement personnalisables, parfaitement
              adaptés aux besoins de votre activité
            </p>
          </div>

          <div class="mt-12 grid md:grid-cols-3 gap-8">
            {
              [
                {
                  title: "E-commerçant",
                  description: (
                    <>
                      Créez des formulaires adaptés pour les retours, les
                      réclamations, ou les questions sur les commandes.
                      <br />
                      <br />
                      Automatisez l’attribution des demandes au service concerné
                      (SAV, logistique, etc.).
                    </>
                  ),
                },
                {
                  title: "TPE-PME",
                  description: (
                    <>
                      Proposez des formulaires pré-remplis pour chaque type de
                      demande (congés, matériel, problème technique).
                      <br />
                      <br />
                      Facilitez le suivi des demandes avec des statuts en temps
                      réel (soumis, en cours, résolu).
                    </>
                  ),
                },
                {
                  title: "Freelance",
                  description: (
                    <>
                      Créez un formulaire standardisé pour collecter les besoins
                      des clients (type de projet, budget, délai).
                      <br />
                      <br />
                      Centralisez toutes les demandes dans un tableau clair et
                      priorisez les opportunités.
                    </>
                  ),
                },
              ].map((useCase, index) => (
                <Card key={index} className="p-6">
                  <h3 class="text-xl font-semibold">{useCase.title}</h3>
                  <p class="mt-2 text-gray-600">{useCase.description}</p>
                  <div class="mt-4 space-y-2">
                    {[1, 2, 3].map((item) => (
                      <div class="flex items-center gap-2">
                        <div class="h-4 w-4 rounded bg-gray-200" />
                        <div class="h-4 w-32 rounded bg-gray-200" />
                      </div>
                    ))}
                  </div>
                </Card>
              ))
            }
          </div>
        </div>
      </section>

      {/* Features Section */}
      <section class="py-20">
        <div class="w-full mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center">
            <h2 class="text-3xl">
              Dans un <span class="font-bold">un seul outil.</span>
            </h2>
            <p class="mt-4 text-gray-600">
              Explorez des fonctionnalités sur mesure pour répondre aux besoins
              spécifiques de votre activité.
            </p>
          </div>

          <div class="mt-12 gap-8 mx-auto flex justify-center">
            <div class="flex gap-2">
              <Card className="p-6 h-[700px] w-1/3">
                <div
                  class="h-8 w-8 rounded-lg bg-primary/10 flex items-center justify-center"
                >
                  <Users className="h-5 w-5 text-primary" />
                </div>
                <h3 class="mt-4 text-xl font-semibold">Expérience Client</h3>
                <p class="mt-2 text-gray-600">
                  Créez une expérience client sur mesure du ticket à la
                  résolution de la demande
                </p>
              </Card>

              <div class="flex flex-col justify-between gap-2">
                <div class="flex gap-2 h-1/2">
                  <Card className="p-6 overflow-hidden relative group">
                    <div
                      class="h-8 w-8 rounded-lg bg-primary/10 flex items-center justify-center"
                    >
                      <BarChart2 className="h-5 w-5 text-primary" />
                    </div>
                    <h3 class="mt-4 text-xl font-semibold">
                      Données analytiques
                    </h3>
                    <p class="mt-2 text-gray-600">
                      Vue détaillée des métriques pour améliorer la performance
                      de vos flux
                    </p>

                    <div
                      class="flex w-[60%] mx-auto absolute -bottom-4 group-hover:-bottom-1 items-end justify-between inset-0 transition-all"
                    >
                      {
                        [
                          "h-6",
                          "h-20",
                          "h-32",
                          "h-40",
                          "h-52",
                          "h-52",
                          "h-52",
                        ].map((itemHeight) => (
                          <div
                            class={`${itemHeight}  border rounded-sm w-6 bg-gradient-to-b from-white to-gray-100`}
                          />
                        ))
                      }
                    </div>
                  </Card>

                  <Card className="p-6">
                    <div
                      class="h-8 w-8 rounded-lg bg-primary/10 flex items-center justify-center"
                    >
                      <Bell className="h-5 w-5 text-primary" />
                    </div>
                    <h3 class="mt-4 text-xl font-semibold">Notifications</h3>
                    <p class="mt-2 text-gray-600">
                      Soyez notifié des nouveaux tickets dans votre espace et
                      suivez leur progression
                    </p>
                  </Card>
                </div>
                <Card className="p-6 w-full h-1/2">
                  <div
                    class="h-8 w-8 rounded-lg bg-primary/10 flex items-center justify-center"
                  >
                    <Bell className="h-5 w-5 text-primary" />
                  </div>
                  <h3 class="mt-4 text-xl font-semibold">Gestion d'équipe</h3>
                  <p class="mt-2 text-gray-600">
                    Gestions & Organisation des demandes au sein de votre
                    entreprise
                  </p>
                </Card>
              </div>
            </div>
          </div>
        </div>
      </section>

      {/* Integration Section */}

      <section
        class="bg-white rounded-lg border py-20 max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 relative overflow-hidden"
      >
        <div class="">
          <h2 class="text-3xl font-bold">
            Synchronisez vos outils <br /> essentiels pour une gestion <br /> simplifiée.
          </h2>
          <p class="mt-4 text-gray-600">
            Askform propose des intégrations intégrées pour toutes les
            applications <br /> que vous connaissez et aimez déjà.
          </p>
        </div>

        <div class="absolute right-0 top-1/2">
          <div class="absolute inset-0 flex items-center justify-center group">
            <div class="absolute right-3 text-xl font-bold">askform</div>
            <div
              class="h-[300px] w-[300px] rounded-full border-2 absolute border-gray-200 group-hover:border-gray-500 transition-all"
            >
            </div>
            <div
              class="h-[400px] w-[400px] rounded-full border-2 absolute border-gray-200 group-hover:border-gray-500 transition-all"
            >
            </div>
            <div
              class="h-[500px] w-[500px] rounded-full border-2 absolute border-gray-200 group-hover:border-gray-500 transition-all"
            >
            </div>
          </div>
          <!--  <div
            class="relative grid grid-cols-3 gap-8 items-center justify-items-center"
          >
            {
              ["M", "O", "A"].map((letter, index) => (
                <div class="h-12 w-12 rounded-full bg-white shadow-lg flex items-center justify-center font-semibold">
                  {letter}
                </div>
              ))
            }
          </div> -->
        </div>
      </section>

      {/* Footer */}
      <footer class="border-t py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <div class="text-xl font-semibold">askform</div>
        </div>
      </footer>
    </div>
  </main>

  <style>
    @keyframes fadeIn {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    @keyframes navbar-w {
      0% {
        width: 50%;
      }
      100% {
        width: 100%;
      }
    }

    @keyframes fadeInLow {
      0% {
        background-size: 400% 400%;
        background-position: 0% 0%;
      }
      50% {
        background-color: transparent;
      }
      100% {
        background-size: 100% 100%;
        background-position: 100% 100%;
      }
    }

    @keyframes move-bottom {
      0% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(50px);
      }
      100% {
        transform: translateY(0px);
      }
    }
  </style>
</Layout>
